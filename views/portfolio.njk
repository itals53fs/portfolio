{% block content %}

  <div id="wrapper">
    <h1>Portfolio</h1>
  </div>
  <section class="cards">

    {% for item in item %}
    <div class="card">
      <div class="card_img-container">
        <img src="src/img/{{item.img}}" class="img-responsive">
        {% if item.featured %}
          <div class="featured">Featured</div>
        {% endif %}
      </div>

      <div class="card_content">
        <p>{{item.title}}</p>
      </div>

      <div class="card_info">
    
        <p class="card_price">{{item.button}}</p>
      </div>
    </div>
    {% endfor %}
  </section>

  <div class="modal-overlay actve">
    <div class="modal">
      <span data-js="text" class="text"></span>
      <a class="close-modal">
       <span class="material-icons">X</span>
      </a> <!-- material icons -->
       <div class="modall-content">
        <img src="">
       </div>
    </div>
  </div>
  <script src="/src/js/handle.js"></script>

  {% endblock %}